!!!
%html{'ng-app' => 'todo.main' }
  %head
    %meta{ content: "width=device-width, initial-scale=1.0", name: "viewport" }/
    %title= yield?(:title, I18n.t("page.title"))
    %meta{ content: yield?(:description, I18n.t("meta.desc")),
    name: I18n.t("meta.name") }/
    = stylesheet_link_tag "application", media: "all",
      "data-turbolinks-track" => true
    = stylesheet_link_tag "application",
      "http://fonts.googleapis.com/css?family=Roboto:400,700,300|Press+Start+2P)"
    = favicon_link_tag
    = javascript_include_tag "vendor/modernizr"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header= render "layouts/navigation"
    %main{ role: "main" }
      = render "layouts/messages"
      = yield
